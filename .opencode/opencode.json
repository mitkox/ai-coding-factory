      },
      "permission": {
        "skill": {
          "net-docker": "allow",
          "net-github-actions": "allow",
          "net-kubernetes": "allow",
          "*": "deny"
        }
      }
    }
  },
  "mcp": {
    "github": {
      "type": "remote",
      "url": "https://mcp.github.com",
      "enabled": false,
      "oauth": {}
    },
    "azure-devops": {
      "type": "remote",
      "url": "https://your-azure-devops-mcp-endpoint",
      "enabled": false,
      "oauth": false,
      "headers": {
        "Authorization": "Basic {env:AZURE_DEVOPS_PAT}"
      }
    },
    "sonarqube": {
      "type": "remote",
      "url": "https://your-sonarqube.com/mcp",
      "enabled": false,
      "oauth": false,
      "headers": {
        "Authorization": "Bearer {env:SONARQUBE_TOKEN}"
      }
    }
  },
  "plugin": [],
  "rules": {
    "net-security": [
      "Always validate input parameters",
      "Use parameterized queries to prevent SQL injection",
      "Implement proper authentication and authorization",
      "Never commit secrets to code",
      "Use HTTPS for all API endpoints"
    ],
    "net-architecture": [
      "Follow Clean Architecture principles",
      "Separate concerns: API, Application, Domain, Infrastructure",
      "Use dependency injection throughout",
      "Implement repository pattern for data access",
      "Use DTOs for API responses"
    ],
    "net-best-practices": [
      "Use async/await for I/O operations",
      "Implement proper exception handling",
      "Add XML comments for public APIs",
      "Use ILogger for logging, not Console.WriteLine",
      "Follow C# naming conventions (PascalCase for public members)"
    ],
    "scrum": [
      "Follow Scrum Guide principles and practices",
      "Use INVEST criteria for user stories",
      "Maintain single product backlog",
      "Conduct daily standups, sprint reviews, and retrospectives",
      "Implement Definition of Done and Ready",
      "Track team velocity and metrics",
      "Protect team scope from mid-sprint changes",
      "Inspect and adapt process based on retrospectives"
    ]
  },
  "share": "disabled",
  "network": {
    "proxy": null
  }
}
